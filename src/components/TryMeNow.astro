---
interface Props {
  starterId: string;
  tasks: string[];
  expectedOutput?: string;
  tip?: string;
}

const { starterId, tasks, expectedOutput, tip } = Astro.props;
const editorUrl = `/editor/?week=01&starter=${starterId}`;
---

<div class="try-me-now">
  <div class="try-me-now-header">
    <span class="try-me-now-icon">ðŸš€</span>
    <strong>Try Me Now</strong>
  </div>
  
  <div class="try-me-now-content">
    <ul class="task-list">
      {tasks.map((task) => (
        <li>{task}</li>
      ))}
    </ul>
    
    {expectedOutput && (
      <div class="expected-output">
        <strong>Expected output:</strong>
        <pre>{expectedOutput}</pre>
      </div>
    )}
    
    {tip && (
      <div class="tip">
        <span class="tip-icon">ðŸ’¡</span>
        <span>{tip}</span>
      </div>
    )}
    
    <a href={editorUrl} class="try-me-now-button">
      Open in Editor â†’
    </a>
  </div>
</div>

<style>
  .try-me-now {
    background: var(--panel);
    border: 2px solid var(--accent);
    border-radius: 8px;
    padding: 16px;
    margin: 24px 0;
  }
  
  .try-me-now-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
    color: var(--accent);
    font-size: 16px;
  }
  
  .try-me-now-icon {
    font-size: 20px;
  }
  
  .try-me-now-content {
    color: var(--text);
  }
  
  .task-list {
    margin: 12px 0;
    padding-left: 24px;
  }
  
  .task-list li {
    margin: 6px 0;
    line-height: 1.5;
  }
  
  .expected-output {
    background: var(--panel2);
    border-left: 3px solid var(--accent);
    padding: 12px;
    margin: 12px 0;
    border-radius: 4px;
  }
  
  .expected-output strong {
    display: block;
    margin-bottom: 8px;
    color: var(--accent);
  }
  
  .expected-output pre {
    margin: 0;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 14px;
    color: var(--text);
    white-space: pre-wrap;
  }
  
  .tip {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    background: var(--panel2);
    padding: 12px;
    border-radius: 4px;
    margin: 12px 0;
    font-size: 14px;
    color: var(--text-muted);
  }
  
  .tip-icon {
    font-size: 16px;
    flex-shrink: 0;
  }
  
  .try-me-now-button {
    display: inline-block;
    background: var(--accent);
    color: white;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    margin-top: 12px;
    transition: background 0.2s;
  }
  
  .try-me-now-button:hover {
    background: var(--accent-hover);
    text-decoration: none;
  }
</style>
