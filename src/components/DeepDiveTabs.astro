    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
  }

    /* Optional: if you add these classes on images */
    .explanation :global(img.clr-img) { max-height: 390px; }
    .explanation :global(img.bcl-img) { max-height: 285px; }


  @media (max-width: 768px) {
