---
interface Tab {
  id: string;
  label: string;
  content: string;
  keyPoints?: string[];
  media?: string;
}

interface Props {
  tabs: Tab[];
  defaultTab?: string;
  title?: string;
  videoUrl?: string;
  videoThumbnail?: string;
}

const { tabs, defaultTab = tabs[0]?.id, title, videoUrl, videoThumbnail } = Astro.props;
const componentId = `tabs-${Math.random().toString(36).substr(2, 9)}`;
---

<section class="deep-dive-section">
  {title && <h2 class="deep-dive-title">{title}</h2>}
  
  <div class="tabs-bar" role="tablist" data-component-id={componentId}>
    {tabs.map((tab, index) => (
      <button
        role="tab"
        aria-selected={tab.id === defaultTab ? "true" : "false"}
        aria-controls={`panel-${componentId}-${tab.id}`}
        id={`tab-${componentId}-${tab.id}`}
        class:list={["tab-btn", { "tab-btn-active": tab.id === defaultTab }]}
        data-tab-id={tab.id}
      >
        {tab.label}
      </button>
    ))}
  </div>
  
  <div class="tab-content-area">
      {tabs.map((tab) => (
        <div
          role="tabpanel"
          id={`panel-${componentId}-${tab.id}`}
          aria-labelledby={`tab-${componentId}-${tab.id}`}
          class="tab-content"
          data-tab-id={tab.id}
          hidden={tab.id !== defaultTab}
        >
          <div class="explanation" set:html={tab.content} />
            
            {tab.keyPoints && tab.keyPoints.length > 0 && (
              <div class="key-points">
                <h4>Key Points</h4>
                <ul>
                  {tab.keyPoints.map((point) => (
                    <li>{point}</li>
                  ))}
                </ul>
              </div>
            )}
            
            {tab.media && (
              <div class="media-slot">
                <img src={tab.media} alt={`Diagram for ${tab.label}`} />
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </section>
  
  {videoUrl && (
    <section class="see-it-in-action">
      <h3>See it in action</h3>
      <p>This educational guide explains the core differences and how they work together, providing a solid foundation for new .NET developers.</p>
      <div class="video-container">
        <iframe
          src={videoUrl}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </section>
  )}
</div>

<script define:vars={{ componentId }}>
  (() => {
    const tabsBar = document.querySelector(`[data-component-id="${componentId}"]`);
    if (!tabsBar) return;
    
    const container = tabsBar.closest('.deep-dive-section');
    if (!container) return;
    
    const tabButtons = tabsBar.querySelectorAll('.tab-btn');
    const tabPanels = container.querySelectorAll('.tab-content');
    
    // Enhanced tab switching with animation
    function switchTab(targetId) {
      tabButtons.forEach(btn => {
        const isActive = btn.dataset.tabId === targetId;
        btn.setAttribute('aria-selected', isActive ? 'true' : 'false');
        btn.classList.toggle('tab-btn-active', isActive);
      });
      
      tabPanels.forEach(panel => {
        const isActive = panel.dataset.tabId === targetId;
        
        if (isActive) {
          // Show with animation
          panel.hidden = false;
          panel.style.animation = 'fadeSlideIn 180ms ease-out';
        } else {
          panel.hidden = true;
        }
      });
    }
    
    // Click handlers
    tabButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        switchTab(btn.dataset.tabId);
      });
    });
    
    // Keyboard navigation
    tabsBar.addEventListener('keydown', (e) => {
      const currentIndex = Array.from(tabButtons).findIndex(btn => 
        btn.getAttribute('aria-selected') === 'true'
      );
        
        let nextIndex = currentIndex;
        
        if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
          e.preventDefault();
          nextIndex = (currentIndex + 1) % tabButtons.length;
        } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
          e.preventDefault();
          nextIndex = (currentIndex - 1 + tabButtons.length) % tabButtons.length;
        } else if (e.key === 'Home') {
          e.preventDefault();
          nextIndex = 0;
        } else if (e.key === 'End') {
          e.preventDefault();
          nextIndex = tabButtons.length - 1;
        }
        
        if (nextIndex !== currentIndex) {
          tabButtons[nextIndex].focus();
          switchTab(tabButtons[nextIndex].dataset.tabId);
        }
      });
  })();
</script>

