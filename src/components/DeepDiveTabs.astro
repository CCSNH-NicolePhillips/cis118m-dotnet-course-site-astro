---
interface Tab {
  id: string;
  label: string;
  content: string;
  keyPoints?: string[];
  media?: string;
}

interface Props {
  tabs: Tab[];
  defaultTab?: string;
  title?: string;
  videoUrl?: string;
  videoThumbnail?: string;
}

const { tabs, defaultTab = tabs[0]?.id, title, videoUrl, videoThumbnail } = Astro.props;
const componentId = `tabs-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="deep-dive-container">
  {title && <h2 class="deep-dive-title">{title}</h2>}
  
  <div class="deep-dive-tabs" data-component-id={componentId}>
    <div role="tablist" class="tab-list">
      {tabs.map((tab, index) => (
        <button
          role="tab"
          aria-selected={tab.id === defaultTab ? "true" : "false"}
          aria-controls={`panel-${componentId}-${tab.id}`}
          id={`tab-${componentId}-${tab.id}`}
          class="tab-button"
          data-tab-id={tab.id}
        >
          {tab.label}
        </button>
      ))}
    </div>
    
    <div class="tab-panels">
      {tabs.map((tab) => (
        <div
          role="tabpanel"
          id={`panel-${componentId}-${tab.id}`}
          aria-labelledby={`tab-${componentId}-${tab.id}`}
          class="tab-panel"
          data-tab-id={tab.id}
          hidden={tab.id !== defaultTab}
        >
          <div class="panel-content">
            <div class="explanation" set:html={tab.content} />
            
            {tab.keyPoints && tab.keyPoints.length > 0 && (
              <div class="key-points">
                <h4>Key Points</h4>
                <ul>
                  {tab.keyPoints.map((point) => (
                    <li>{point}</li>
                  ))}
                </ul>
              </div>
            )}
            
            {tab.media && (
              <div class="media-slot">
                <img src={tab.media} alt={`Diagram for ${tab.label}`} />
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
  
  {videoUrl && (
    <div class="see-it-in-action">
      <h3>See it in action</h3>
      <p>This educational guide explains the core differences and how they work together, providing a solid foundation for new .NET developers.</p>
      <div class="video-container">
        <iframe
          src={videoUrl}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  )}
</div>

<script define:vars={{ componentId }}>
  (() => {
    const container = document.querySelector(`[data-component-id="${componentId}"]`)?.closest('.deep-dive-container');
    if (!container) return;
    
    const tabButtons = container.querySelectorAll('.tab-button');
    const tabPanels = container.querySelectorAll('.tab-panel');
    
    // Enhanced tab switching with animation
    function switchTab(targetId) {
      tabButtons.forEach(btn => {
        const isActive = btn.dataset.tabId === targetId;
        btn.setAttribute('aria-selected', isActive ? 'true' : 'false');
        btn.classList.toggle('active', isActive);
      });
      
      tabPanels.forEach(panel => {
        const isActive = panel.dataset.tabId === targetId;
        
        if (isActive) {
          // Show with animation
          panel.hidden = false;
          panel.style.animation = 'fadeSlideIn 350ms ease-out';
        } else {
          panel.hidden = true;
        }
      });
    }
    
    // Click handlers
    tabButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        switchTab(btn.dataset.tabId);
      });
    });
    
    // Keyboard navigation
    const tabList = container.querySelector('.tab-list');
    if (tabList) {
      tabList.addEventListener('keydown', (e) => {
        const currentIndex = Array.from(tabButtons).findIndex(btn => 
          btn.getAttribute('aria-selected') === 'true'
        );
        
        let nextIndex = currentIndex;
        
        if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
          e.preventDefault();
          nextIndex = (currentIndex + 1) % tabButtons.length;
        } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
          e.preventDefault();
          nextIndex = (currentIndex - 1 + tabButtons.length) % tabButtons.length;
        } else if (e.key === 'Home') {
          e.preventDefault();
          nextIndex = 0;
        } else if (e.key === 'End') {
          e.preventDefault();
          nextIndex = tabButtons.length - 1;
        }
        
        if (nextIndex !== currentIndex) {
          tabButtons[nextIndex].focus();
          switchTab(tabButtons[nextIndex].dataset.tabId);
        }
      });
    }
  })();
</script>

<style>
  .deep-dive-container {
    margin: 32px 0;
  }
  
  .deep-dive-title {
    font-size: 32px;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 24px;
  }
  
  .deep-dive-tabs {
    background: rgba(42, 42, 46, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 32px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
