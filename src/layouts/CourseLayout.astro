import "../styles/global.css";
import "../styles/editor.css";
import { COURSE, WEEKS, getWeekById, isWeekLocked, TEST_STUDENTS } from "../config/site";
import AITutor from "../components/AITutor";
const { title = "Course Page", description = "" } = Astro.props;

// Check if current page is in a locked week
const { pathname } = Astro.url;
const weekMatch = pathname.match(/\/week-(\d+)\//);
const currentWeekId = weekMatch ? `week-${weekMatch[1]}` : null;
const weekData = currentWeekId ? getWeekById(currentWeekId) : null;
const isLocked = weekData ? isWeekLocked(currentWeekId!) : false;
const unlockTime = weekData ? new Date(weekData.unlockDate).toLocaleString('en-US', { 
  weekday: 'long', 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric',
  hour: 'numeric',
  minute: '2-digit',
  timeZoneName: 'short'
}) : '';

// Helper to format unlock date for each week
const formatUnlockDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleString('en-US', { 
    weekday: 'short', 
    month: 'short', 
    day: 'numeric',
    hour: 'numeric',
    minute: '2-digit'
  });
};

// Get week lock status for sidebar
const getWeekLockInfo = (weekSlug: string) => {
  const weekId = `week-${weekSlug}`;
  const week = getWeekById(weekId);
  if (!week) return { isLocked: false, unlockDate: '' };
  const locked = new Date() < new Date(week.unlockDate);
  return {
    isLocked: locked,
    unlockDate: locked ? formatUnlockDate(week.unlockDate) : ''
  };
};
