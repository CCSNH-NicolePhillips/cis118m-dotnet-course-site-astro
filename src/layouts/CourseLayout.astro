            const obj = raw ? safeJsonParse(raw) : null;
            if (obj && typeof obj === "object") return obj;
          } catch {}
          return { weeks: {} };
        };

        const save = (data) => {
          try { localStorage.setItem(KEY, JSON.stringify(data)); } catch {}
        };

        const ensureWeek = (data, week) => {
          data.weeks ||= {};
          data.weeks[week] ||= { viewed: {}, selfMarked: {}, lastUpdated: new Date().toISOString() };
          data.weeks[week].viewed ||= {};
          data.weeks[week].selfMarked ||= {};
          return data.weeks[week];
        };

        const getWeekAndSlugFromPath = () => {
          const path = window.location.pathname;
          const m = path.match(/^\/week-(\d{2})\/(.*)$/);
          if (!m) return null;
          const week = m[1];
          const rest = (m[2] || "").replace(/\/+$/, "");
          const slug = rest === "" ? "index" : rest.split("/")[0];
          return { week, slug };
        };

        const markViewed = () => {
          const info = getWeekAndSlugFromPath();
          if (!info) return;
          
          // Don't mark as viewed if content is locked (check after a small delay for JS locks to apply)
          const moduleContent = document.getElementById('module-content');
          const prereqLock = document.getElementById('prereq-lock');
          const moduleLock = document.getElementById('module-lock');
          
          // If locks are visible or content is hidden, don't mark as viewed
