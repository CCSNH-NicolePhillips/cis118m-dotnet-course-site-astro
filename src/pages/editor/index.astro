---
import CourseLayout from "../../layouts/CourseLayout.astro";

const title = "Browser Code Editor";
const description = "Practice C# in the browser with Monaco, autosave, reset, download, compile, and run.";
const runnerUrl = import.meta.env.PUBLIC_RUNNER_URL ?? "";
---

<CourseLayout title={title} description={description}>
  <h1 style="margin-bottom:12px;">Browser Code Editor</h1>
  <p class="hint" style="margin-bottom:18px;">Autosaves per starter. Reset returns to the starter template. Download gives you Program.cs.</p>

  <div class="editor-bar">
    <div class="editor-meta">
      <div class="pill-soft" id="week-pill">Week ??</div>
      <div class="pill-soft" id="starter-pill">Starter: loading...</div>
    </div>
    <div class="editor-actions">
      <button id="save-btn" class="button editor-btn" type="button">Save</button>
      <button id="reset-btn" class="button editor-btn" type="button">Reset</button>
      <button id="download-btn" class="button editor-btn" type="button">Download Program.cs</button>
      <button id="compile-btn" class="button editor-btn" type="button" title="Shift+Enter">Compile</button>
      <button id="run-btn" class="button editor-btn" type="button" title="Ctrl/Cmd+Enter">Run</button>
      <button id="check-btn" class="button editor-btn" type="button" title="Run guided checks">Run Checks</button>
      <button id="theme-toggle" class="button editor-btn" type="button" title="Toggle Light/Dark">ðŸŒ™</button>
      <span id="status" class="hint" style="margin-left:10px;">Loadingâ€¦</span>
    </div>
  </div>

  <div class="stdin-wrap">
    <div class="stdin-header" id="stdin-header">
      <label for="stdin-input" class="input-label">Program Input (optional) <span id="stdin-toggle">â–¸</span></label>
    </div>
    <div class="stdin-content" id="stdin-content">
      <textarea id="stdin-input" class="stdin-input" rows="3" placeholder="Values passed to your program's stdin"></textarea>
    </div>
  </div>

  <div id="editor" aria-label="Monaco editor" style="height:70vh; border:1px solid var(--border); border-radius:14px; overflow:hidden;"></div>

  <div class="output-drawer" id="output-drawer">
    <div class="output-drawer-header" id="output-drawer-header">
      <span class="output-drawer-title">Output <span id="drawer-toggle">â–¾</span></span>
      <span id="output-status" class="hint">Waiting to compile/runâ€¦</span>
    </div>
    <div class="output-drawer-content" id="output-drawer-content">
      <div class="output-tabs">
        <button class="output-tab active" data-tab="console">Console</button>
        <button class="output-tab" data-tab="errors">Errors</button>
        <button class="output-tab" data-tab="diagnostics">Diagnostics</button>
        <button class="output-tab" data-tab="checks">Checks</button>
      </div>
      <div class="output-tab-content">
        <div class="tab-pane active" id="tab-console">
          <pre id="stdout" class="output-pre">(no output yet)</pre>
        </div>
        <div class="tab-pane" id="tab-errors">
          <pre id="stderr" class="output-pre">(no errors yet)</pre>
        </div>
        <div class="tab-pane" id="tab-diagnostics">
          <ul id="diagnostics-list" class="diagnostics-list"></ul>
          <div id="diagnostics-empty" class="hint" style="display:none;">No diagnostics.</div>
        </div>
        <div class="tab-pane" id="tab-checks">
          <div id="checks-results"></div>
          <div id="checks-hint" class="checks-hint"></div>
          <div id="checks-empty" class="hint" style="display:none;">Click "Run Checks" to see guided feedback.</div>
        </div>
      </div>
    </div>
  </div>

  <script src="/monaco/vs/loader.js" type="text/javascript"></script>
  <script define:vars={{ runnerUrl }}>
    // Inline runner client utilities
    const resolveRunnerUrl = (publicUrl, origin) => {
      const trimmed = (publicUrl ?? "").trim();
      const normalized = trimmed.replace(/\/+$/, "");
      if (normalized) return normalized;
      const fallback = (origin ?? "").trim();
      return fallback ? fallback.replace(/\/+$/, "") : "";
    };

    const buildRunnerPayload = (starterId, code, stdin) => ({
      starterId,
      files: { "Program.cs": code },
      stdin: stdin ?? "",
    });

    // Auth utilities for cloud save/load - use global functions from layout
    const waitForAuth = async () => {
      let attempts = 0;
      while (!window.__auth) {
        if (attempts++ > 100) throw new Error('Auth not available');
        await new Promise(resolve => setTimeout(resolve, 100));
      }
      return window.__auth;
    };
    
    const isUserAuthenticated = async () => {
      try {
        console.log('[isUserAuthenticated] Waiting for auth...');
        const auth = await waitForAuth();
        console.log('[isUserAuthenticated] Got auth, checking...');
        const result = await auth.isAuthed();
        console.log('[isUserAuthenticated] Result:', result);
        return result;
      } catch (err) {
        console.error('[isUserAuthenticated] Error:', err);
        return false;
      }
    };
    
    const getUserAccessToken = async () => {
      try {
        console.log('[getUserAccessToken] Waiting for auth...');
        const auth = await waitForAuth();
        console.log('[getUserAccessToken] Got auth, getting token...');
        const token = await auth.getAccessToken();
        console.log('[getUserAccessToken] Token length:', token?.length || 0);
        return token;
      } catch (err) {
        console.error("Failed to get access token:", err);
        return null;
      }
    };

    // Progress tracking utilities
    const ProgressTracker = {
      STORAGE_KEY: "cis118m:progress",
      
      getProgress() {
        try {
          const data = localStorage.getItem(this.STORAGE_KEY);
          return data ? JSON.parse(data) : {};
        } catch {
          return {};
        }
      },
      
      getStatus(starterId) {
        const progress = this.getProgress();
        return progress[starterId] || "not-started";
      },
      
      setStatus(starterId, status) {
        const progress = this.getProgress();
        progress[starterId] = status;
        try {
          localStorage.setItem(this.STORAGE_KEY, JSON.stringify(progress));
          // Dispatch event so sidebar can update
          window.dispatchEvent(new CustomEvent("progressUpdated", { 
            detail: { starterId, status } 
          }));
        } catch (err) {
          console.error("Failed to save progress:", err);
        }
      },
      
      markCompleted(starterId) {
        this.setStatus(starterId, "completed");
      },
      
      markInProgress(starterId) {
        if (this.getStatus(starterId) === "not-started") {
          this.setStatus(starterId, "in-progress");
        }
      }
    };

    (() => {
      const envRunnerUrl = runnerUrl;
      const qs = new URLSearchParams(window.location.search);
      let week = (qs.get("week") || "").padStart(2, "0");
      const starterId = qs.get("starter") || (week ? `week-${week}-lesson-1` : "week-01-lesson-1");
      
      // Derive week from starterId if missing
      if (!week && starterId) {
        const match = starterId.match(/week-(\d+)/);
        if (match) week = match[1].padStart(2, "0");
      }
      
      const storageKey = `cis118m:${starterId}:Program.cs`;
      const runnerBase = resolveRunnerUrl(envRunnerUrl, window.location.origin);

      const starterTemplates = {
        "start-here-hello": `// Start Here: Mission #1\n\nusing System;\n\nclass Program\n{\n    static void Main()\n    {\n        Console.WriteLine("Hello, Adventurer!");\n    }\n}\n`,
        "week-01-lesson-1": `// Week 1 Lesson 1: Hello, C#\n\nusing System;\n\nclass Program\n{\n    static void Main()\n    {\n        Console.WriteLine("Hello, world!");\n    }\n}\n`,
        "week-01-lesson-2": `// Week 1 Lesson 2: Console basics\n\nusing System;\n\nclass Program\n{\n    static void Main()\n    {\n        Console.WriteLine("This is lesson 2.");\n        Console.WriteLine("Edit and run me in your IDE.");\n    }\n}\n`,
        "week-01-extra-practice": `// Week 1 Extra Practice\n\nusing System;\n\nclass Program\n{\n    static void Main()\n    {\n        Console.WriteLine("Menu:");\n        Console.WriteLine("1. Start");\n        Console.WriteLine("2. Help");\n        Console.WriteLine("3. Quit");\n    }\n}\n`,
        "week-01-lab-1": `// Lab 1: Welcome Program\n// Name: Your Name Here\n\nusing System;\n\nclass Program\n{\n    static void Main()\n    {\n        // Print 4 lines about yourself\n        // Line 1: Your name\n        // Line 2: The course (CIS 118M)\n        // Line 3: Your goal for this course\n        // Line 4: A fun fact about yourself\n        \n        Console.WriteLine("My name is ...");\n        \n    }\n}\n`,
      };

      const genericTemplate = (id) => `// Starter: ${id}\n// Add your code below.\n\nusing System;\n\nclass Program\n{\n    static void Main()\n    {\n        Console.WriteLine("Hello from ${id}");\n    }\n}\n`;

      const weekLabel = document.getElementById("week-pill");
      const starterLabel = document.getElementById("starter-pill");
      const status = document.getElementById("status");
      const saveBtn = document.getElementById("save-btn");
      const resetBtn = document.getElementById("reset-btn");
      const downloadBtn = document.getElementById("download-btn");
      const compileBtn = document.getElementById("compile-btn");
      const runBtn = document.getElementById("run-btn");
      const checkBtn = document.getElementById("check-btn");
      const themeToggle = document.getElementById("theme-toggle");
      
      if (!checkBtn) {
        console.error('[Editor] check-btn element not found');
      }
      const stdinInput = document.getElementById("stdin-input");
      const editorHost = document.getElementById("editor");
      const stdoutBlock = document.getElementById("stdout");
      const stderrBlock = document.getElementById("stderr");
      const diagnosticsList = document.getElementById("diagnostics-list");
      const diagnosticsEmpty = document.getElementById("diagnostics-empty");
      const checksResults = document.getElementById("checks-results");
      const checksHint = document.getElementById("checks-hint");
      const checksEmpty = document.getElementById("checks-empty");
      const outputStatus = document.getElementById("output-status");
      const outputDrawer = document.getElementById("output-drawer");
      const outputDrawerHeader = document.getElementById("output-drawer-header");
      const outputDrawerContent = document.getElementById("output-drawer-content");
      const drawerToggle = document.getElementById("drawer-toggle");

      weekLabel.textContent = week ? `Week ${Number(week)}` : "Week ??";
      starterLabel.textContent = `Starter: ${starterId}`;

      const setStatus = (msg) => {
        status.textContent = msg;
      };

      const setBusy = (busy, msg) => {
        compileBtn.disabled = busy;
        runBtn.disabled = busy;
        checkBtn.disabled = busy;
        if (busy && msg) setStatus(msg);
      };

      const makeRunnerUrl = (path) => `${runnerBase}${path}`;

      // Declare editor instance early so theme code can reference it
      let editorInstance = null;

      // Theme management with system preference
      const themeKey = "cis118m:theme";
      const storedTheme = localStorage.getItem(themeKey);
      
      const getSystemTheme = () => {
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };
      
      let currentTheme = storedTheme || getSystemTheme();
      
      const applyTheme = (theme) => {
        currentTheme = theme;
        localStorage.setItem(themeKey, theme);
        document.body.setAttribute("data-theme", theme);
        themeToggle.textContent = theme === "dark" ? "â˜€ï¸" : "ðŸŒ™";
        if (editorInstance) {
          monaco.editor.setTheme(theme === "dark" ? "vs-dark" : "vs-soft");
        }
      };
      
      applyTheme(currentTheme);
      
      // Listen for system theme changes if user hasn't set preference
      window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", (e) => {
        if (!localStorage.getItem(themeKey)) {
          applyTheme(e.matches ? "dark" : "light");
        }
      });
      
      themeToggle.addEventListener("click", () => {
        applyTheme(currentTheme === "dark" ? "light" : "dark");
      });

      // Drawer management
      let drawerExpanded = false;
      
      const toggleDrawer = () => {
        drawerExpanded = !drawerExpanded;
        outputDrawer.classList.toggle("expanded", drawerExpanded);
        drawerToggle.textContent = drawerExpanded ? "â–´" : "â–¾";
      };
      
      const openDrawer = () => {
        if (!drawerExpanded) toggleDrawer();
      };
      
      outputDrawerHeader.addEventListener("click", toggleDrawer);
      
      // Stdin input collapse
      const stdinHeader = document.getElementById("stdin-header");
      const stdinContent = document.getElementById("stdin-content");
      const stdinToggle = document.getElementById("stdin-toggle");
      let stdinExpanded = false;
      
      const toggleStdin = () => {
        stdinExpanded = !stdinExpanded;
        stdinContent.style.display = stdinExpanded ? "block" : "none";
        stdinToggle.textContent = stdinExpanded ? "â–¾" : "â–¸";
      };
      
      stdinHeader.addEventListener("click", toggleStdin);
      
      // Tab switching
      document.querySelectorAll(".output-tab").forEach(tab => {
        tab.addEventListener("click", () => {
          const target = tab.dataset.tab;
          document.querySelectorAll(".output-tab").forEach(t => t.classList.remove("active"));
          document.querySelectorAll(".tab-pane").forEach(p => p.classList.remove("active"));
          tab.classList.add("active");
          document.getElementById(`tab-${target}`).classList.add("active");
        });
      });

      const loadFromStorage = () => {
        try {
          const saved = localStorage.getItem(storageKey);
          if (saved) {
            setStatus("Loaded saved code");
            return saved;
          }
        } catch (err) {
          setStatus("Storage unavailable");
        }
        const template = starterTemplates[starterId] || genericTemplate(starterId);
        setStatus("Loaded starter");
        return template;
      };

      const loadFromCloud = async () => {
        try {
          console.log('[Cloud] Checking authentication...');
          const authed = await isUserAuthenticated();
          console.log('[Cloud] Authenticated:', authed);
          
          if (!authed) {
            console.log('[Cloud] Not authenticated, loading from local storage');
            return loadFromStorage(); // Fall back to local storage
          }

          console.log('[Cloud] Getting access token...');
          const token = await getUserAccessToken();
          console.log('[Cloud] Token received:', token ? 'yes' : 'no');
          
          if (!token) {
            console.log('[Cloud] No token, loading from local storage');
            return loadFromStorage();
          }

          // Fetch from cloud
          console.log('[Cloud] Fetching from /api/code-get for starterId:', starterId);
          const response = await fetch(`/api/code-get?starterId=${encodeURIComponent(starterId)}`, {
            headers: {
              "Authorization": `Bearer ${token}`,
            },
          });

          console.log('[Cloud] Response status:', response.status);
          
          if (response.ok) {
            const data = await response.json();
            console.log('[Cloud] Response data:', data);
            
            if (data.code) {
              setStatus("Loaded from cloud");
              return data.code;
            } else {
              console.log('[Cloud] No code in response, loading from local storage');
            }
          } else {
            console.error('[Cloud] Response not ok:', await response.text());
          }
          
          // Fall back to local storage if cloud load fails
          return loadFromStorage();
        } catch (err) {
          console.error("Cloud load failed:", err);
          return loadFromStorage();
        }
      };

      const saveToStorage = (value) => {
        try {
          localStorage.setItem(storageKey, value);
          setStatus("Saved");
        } catch (err) {
          setStatus("Save failed");
        }
      };

      const saveToCloud = async (value) => {
        try {
          // Save to local storage first
          saveToStorage(value);

          console.log('[Cloud Save] Checking authentication...');
          const authed = await isUserAuthenticated();
          console.log('[Cloud Save] Authenticated:', authed);
          
          if (!authed) {
            console.log('[Cloud Save] Not authenticated, local save only');
            return; // Local save only
          }

          console.log('[Cloud Save] Getting access token...');
          const token = await getUserAccessToken();
          console.log('[Cloud Save] Token received:', token ? 'yes' : 'no');
          
          if (!token) {
            console.log('[Cloud Save] No token, local save only');
            return;
          }

          // Save to cloud
          console.log('[Cloud Save] Saving to /api/code-save for starterId:', starterId);
          const response = await fetch("/api/code-save", {
            method: "POST",
            headers: {
              "Authorization": `Bearer ${token}`,
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              starterId,
              code: value,
            }),
          });

          console.log('[Cloud Save] Response status:', response.status);
          
          if (response.ok) {
            console.log('[Cloud Save] Success!');
            setStatus("Saved to cloud â˜ï¸");
            
            // Update progress
            await updateProgress('saved');
          } else {
            console.error('[Cloud Save] Failed:', await response.text());
            setStatus("Saved locally");
          }
        } catch (err) {
          console.error("Cloud save failed:", err);
          setStatus("Saved locally");
        }
      };

      const updateProgress = async (event) => {
        try {
          const authed = await isUserAuthenticated();
          if (!authed) return;
          
          const token = await getUserAccessToken();
          if (!token) return;

          const response = await fetch("/api/progress-update", {
            method: "POST",
            headers: {
              "Authorization": `Bearer ${token}`,
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              starterId,
              event,
            }),
          });

          if (response.ok) {
            // Trigger sidebar update
            window.dispatchEvent(new Event('progressUpdated'));
          }
        } catch (err) {
          console.error('[Progress] Update failed:', err);
        }
      };

      const applyMarkers = (diagnostics) => {
        if (!editorInstance || !window.monaco) return;
        const model = editorInstance.getModel();
        if (!model) return;
        const lineCount = model.getLineCount();
        const clampLine = (line) => Math.min(Math.max(line, 1), lineCount);
        const clampCol = (line, col) => {
          const max = model.getLineMaxColumn(line);
          return Math.min(Math.max(col, 1), max);
        };
        const markers = (diagnostics || []).map((d) => {
          const startLine = clampLine(d.line);
          const startCol = clampCol(startLine, d.column);
          return {
            startLineNumber: startLine,
            startColumn: startCol,
            endLineNumber: startLine,
            endColumn: startCol + 1,
            message: d.message,
            severity: monaco.MarkerSeverity.Error,
          };
        });
        monaco.editor.setModelMarkers(model, "runner", markers);
      };

      const renderDiagnostics = (diagnostics) => {
        diagnosticsList.innerHTML = "";
        if (!diagnostics || diagnostics.length === 0) {
          diagnosticsEmpty.style.display = "block";
          return;
        }
        diagnosticsEmpty.style.display = "none";
        diagnostics.forEach((d) => {
          const li = document.createElement("li");
          li.textContent = `Line ${d.line}, Col ${d.column}: ${d.message}`;
          diagnosticsList.appendChild(li);
        });
      };

      const renderChecks = (checks, hint) => {
        checksResults.innerHTML = "";
        checksHint.innerHTML = "";
        
        if (!checks || checks.length === 0) {
          checksEmpty.style.display = "block";
          return;
        }
        
        checksEmpty.style.display = "none";
        
        const ul = document.createElement("ul");
        ul.className = "checks-list";
        
        checks.forEach((check) => {
          const li = document.createElement("li");
          li.className = check.passed ? "check-pass" : "check-fail";
          
          const icon = document.createElement("span");
          icon.className = "check-icon";
          icon.textContent = check.passed ? "âœ“" : "âœ—";
          
          const text = document.createElement("span");
          text.textContent = `${check.name}: ${check.message}`;
          
          li.appendChild(icon);
          li.appendChild(text);
          ul.appendChild(li);
        });
        
        checksResults.appendChild(ul);
        
        if (hint) {
          const hintText = document.createElement("div");
          hintText.className = "hint-text";
          hintText.innerHTML = `<strong>ðŸ’¡ Next hint:</strong> ${hint}`;
          checksHint.appendChild(hintText);
        }
        
        // Check if all passed
        const allPassed = checks.every(c => c.passed);
        if (allPassed) {
          const success = document.createElement("div");
          success.className = "checks-success";
          success.innerHTML = "ðŸŽ‰ <strong>All checks passed!</strong> Great work!";
          checksHint.appendChild(success);
        }
      };

      const updateOutputs = (result, kind) => {
        const stdout = result?.stdout || "";
        const stderr = result?.stderr || "";
        const diagnostics = result?.diagnostics || [];
        const compileTimedOut = Boolean(result?.compileTimedOut ?? result?.CompileTimedOut);
        const runTimedOut = Boolean(result?.runTimedOut ?? result?.RunTimedOut);

        stdoutBlock.textContent = stdout.trim() ? stdout : "(no stdout)";
        stderrBlock.textContent = stderr.trim() ? stderr : "(no stderr)";

        renderDiagnostics(diagnostics);
        applyMarkers(diagnostics);
        
        // Handle check kind
        if (kind === "check") {
          const checks = result?.checks || [];
          const hint = result?.hint || "";
          renderChecks(checks, hint);
          
          // Auto-open drawer and switch to Checks tab
          openDrawer();
          document.querySelector('[data-tab="checks"]').click();
          
          const compileOk = Boolean(result?.compileOk);
          if (!compileOk) {
            outputStatus.textContent = "Check failed: compile errors";
            setStatus("Check failed: compile errors");
          } else {
            const allPassed = checks.every(c => c.passed);
            
            // Mark lesson as completed if all checks pass
            if (allPassed) {
              ProgressTracker.markCompleted(starterId);
              updateProgress('passed');
            }
            
            outputStatus.textContent = allPassed ? "All checks passed!" : "Some checks need attention";
            setStatus(allPassed ? "All checks passed!" : "Some checks need attention");
          }
          return;
        }
        
        // Update progress on run
        if (kind === "run") {
          updateProgress('ran');
        }
        
        // Auto-open drawer if there's output or errors
        if (stdout.trim() || stderr.trim() || diagnostics.length > 0) {
          openDrawer();
        }

        const compileOk = Boolean(result?.compileOk);
        const runOk = kind === "run" ? Boolean(result?.runOk) : false;
        const maybeTimedOut = kind === "run" && !runOk && !stderr.trim();

        if (kind === "compile") {
          outputStatus.textContent = compileOk ? "Compile succeeded" : "Compile failed";
          setStatus(compileOk ? "Compile succeeded" : "Compile failed");
          return;
        }

        if (!compileOk) {
          outputStatus.textContent = "Compile failed";
          setStatus("Compile failed");
          return;
        }

        const runMsg = runOk
          ? "Run succeeded"
          : runTimedOut
            ? "Timed out â€” possible infinite loop"
            : maybeTimedOut
              ? "Run may have timed out"
              : "Run failed";
        outputStatus.textContent = runMsg;
        setStatus(runMsg);
      };

      const runnerRequest = async (path, payload, kind) => {
        const statusMsg = kind === "run" ? "Running..." : kind === "check" ? "Running checks..." : "Compiling...";
        setBusy(true, statusMsg);
        openDrawer(); // Open drawer immediately to show progress
        
        // Clear previous output
        stdoutBlock.textContent = '(running...)';
        stderrBlock.textContent = '';
        diagnosticsList.innerHTML = '';
        diagnosticsEmpty.style.display = 'block';
        if (kind === 'check') {
          checksResults.innerHTML = '';
          checksEmpty.style.display = 'block';
        }
        
        try {
          const res = await fetch(makeRunnerUrl(path), {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload),
          });
          if (!res.ok) {
            throw new Error(`Runner HTTP ${res.status}`);
          }
          const data = await res.json();
          updateOutputs(data, kind);
        } catch (err) {
          setStatus("Runner error");
          outputStatus.textContent = "Runner error";
          stderrBlock.textContent = err?.message || "Runner unavailable";
          applyMarkers([]);
          renderDiagnostics([]);
        } finally {
          setBusy(false);
        }
      };

      const bootstrap = () => {
        console.log('[Monaco] Bootstrap called, flag status:', window.__monacoBootstrapped);
        
        // Set flag immediately to prevent any duplicate initialization
        if (window.__monacoBootstrapped) {
          console.log('[Monaco] Already bootstrapped, skipping');
          return;
        }
        window.__monacoBootstrapped = true;
        
        const r = window.require;
        if (!r || !r.config) {
          // Reset flag if require isn't ready yet
          window.__monacoBootstrapped = false;
          setStatus("Loading editor...");
          setTimeout(bootstrap, 50);
          return;
        }

        console.log('[Monaco] Starting bootstrap');

        // Configure Monaco to use local assets
        window.MonacoEnvironment = {
          getWorkerUrl: function (workerId, label) {
            return `data:text/javascript;charset=utf-8,${encodeURIComponent(`
              self.MonacoEnvironment = {
                baseUrl: '${window.location.origin}/monaco/'
              };
              importScripts('${window.location.origin}/monaco/vs/base/worker/workerMain.js');
            `)}`;
          }
        };
        
        // Check if Monaco is already loaded globally
        if (window.monaco && window.monaco.editor) {
          initializeEditor();
          return;
        }
        
        r.config({ paths: { vs: '/monaco/vs' } });

        r(["vs/editor/editor.main"], () => {
          initializeEditor();
        });
      };

      const initializeEditor = async () => {
        // Define custom light theme with matching background
        monaco.editor.defineTheme("vs-soft", {
            base: "vs",
            inherit: true,
            rules: [],
            colors: {
              "editor.background": "#d4d9e5",
              "editor.lineHighlightBackground": "#c8ceda",
              "editorLineNumber.foreground": "#7a849a",
              "editorLineNumber.activeForeground": "#3d4758",
            }
          });
          
          const initialValue = await loadFromCloud();
          editorInstance = monaco.editor.create(editorHost, {
            value: initialValue,
            language: "csharp",
            theme: currentTheme === "dark" ? "vs-dark" : "vs-soft",
            automaticLayout: true,
            minimap: { enabled: false },
            fontSize: 14,
            quickSuggestions: {
              other: true,
              comments: false,
              strings: false,
            },
            suggestOnTriggerCharacters: true,
            parameterHints: { enabled: true },
          });

          let timer;
          editorInstance.onDidChangeModelContent(() => {
            clearTimeout(timer);
            timer = setTimeout(() => saveToCloud(editorInstance.getValue()), 450);
          });

          saveBtn.addEventListener("click", () => saveToCloud(editorInstance.getValue()));

          resetBtn.addEventListener("click", () => {
            const template = starterTemplates[starterId] || genericTemplate(starterId);
            editorInstance.setValue(template);
            saveToCloud(template);
            applyMarkers([]);
            renderDiagnostics([]);
            setStatus("Reset to starter");
          });

          downloadBtn.addEventListener("click", () => {
            const blob = new Blob([editorInstance.getValue()], { type: "text/plain" });
            const url = URL.createObjectURL(blob);
            const link = document.createElement("a");
            link.href = url;
            link.download = "Program.cs";
            link.click();
            URL.revokeObjectURL(url);
            setStatus("Downloaded Program.cs");
          });

          compileBtn.addEventListener("click", () => {
            if (!editorInstance) return;
            const payload = buildRunnerPayload(starterId, editorInstance.getValue(), "");
            runnerRequest("/api/compile", payload, "compile");
          });

          runBtn.addEventListener("click", () => {
            if (!editorInstance) return;
            const payload = buildRunnerPayload(starterId, editorInstance.getValue(), stdinInput.value || "");
            runnerRequest("/api/run", payload, "run");
          });
          
          checkBtn.addEventListener("click", () => {
            console.log('[Check] Button clicked');
            if (!editorInstance) {
              console.error('[Check] No editor instance');
              return;
            }
            console.log('[Check] Building payload for starterId:', starterId);
            const payload = buildRunnerPayload(starterId, editorInstance.getValue(), "");
            console.log('[Check] Sending request to /api/check');
            runnerRequest("/api/check", payload, "check");
          });
          
          // Keyboard shortcuts
          editorInstance.addCommand(monaco.KeyMod.CtrlCmd | monaco.KeyCode.Enter, () => {
            runBtn.click();
          });
          
          editorInstance.addCommand(monaco.KeyMod.Shift | monaco.KeyCode.Enter, () => {
            compileBtn.click();
          });

          setStatus("Editor ready");
          outputStatus.textContent = runnerBase ? `Runner: ${runnerBase}` : "Runner: same origin";
          
          // Mark lesson as in-progress when editor loads
          ProgressTracker.markInProgress(starterId);
      };

      const startWhenReady = () => {
        if (window.__monacoBootstrapped) {
          console.log('[Monaco] Startup skipped - already bootstrapped');
          return;
        }
        
        console.log('[Monaco] Starting initialization, readyState:', document.readyState);
        
        // Just call bootstrap - it will poll until require is ready
        bootstrap();
      };

      startWhenReady();
    })();
  </script>

